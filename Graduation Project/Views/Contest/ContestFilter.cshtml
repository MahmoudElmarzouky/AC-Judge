
<div class="panel-heading">
    <div class="panel-title">
        <i class="fas fa-filter"></i> Filter
    </div>
    <i class="fas fa-angle-down" data-toggle="OpenFilterPanel"></i>
</div>
<div class="panel-body" hidden>
    <form class="form-horizontal" asp-action="Filter">
        <div class="form-group row">
            <label class="control-label col-md-2">Contest Title</label>
            <div class="col-md-8">
                <input type="text" name="contestTitle" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Prepeard By</label>
            <div class="col-md-8">
                <input type="text" name="PrepeardBy" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Contest Status</label>
            <div class="col-md-8">
                <select class="form-control text-capitalize" name="ContestStatus">
                    <option value="All">All</option>
                    <option value="scheduled">scheduled</option>
                    <option value="running">running</option>
                    <option value="ended">ended</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Contest Type</label>
            <div class="col-md-8">
                <select class="form-control text-capitalize" name="ContestType">
                    <option value="All">All Contests</option>
                    <option value="classical">classical</option>
                    <option value="group">group</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Contest Me</label>
            <div class="col-md-8">
                <select class="form-control text-capitalize" name="ContestX">
                    <option value="All">All Contests</option>
                    <option value="Contests">My Contests</option>
                    <option value="Participation">My Participation</option>
                    <option value="Arrangement">My Arrangement</option>
                    <option value="Favorites">My Favorites</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-2">Contest Privacy</label>
            <div class="col-md-8">
                <select class="form-control text-capitalize" name="ContestPrivacy">
                    <option value="All">All</option>
                    <option value="Public">Public</option>
                    <option value="Private">Private</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-8">
                <input type="reset" name="Reset" value="Reset" class="btn btn-secondary" />
                <input type="submit" name="Reset" value="Search" class="btn btn-info" />
            </div>
        </div>
    </form>
</div>