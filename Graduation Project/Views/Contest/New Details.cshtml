        <section class="nav-action">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#">Overview</a></li>
                <li role="presentation"><a href="#">My Sabmision</a></li>
                <li role="presentation"><a href="#">Status</a></li>
                <li role="presentation"><a href="#">Standings</a></li>
                <li role="presentation" class="dropdown pull-right">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    Control <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    @if (Model.groupId != null)
                    {
                        <li><a asp-controller="Group" asp-action="Details" asp-route-id="@Model.groupId">Show Group</a></li>
                    }
                    <li><a asp-action="Edit" asp-route-id="@Model.contestId">Edit Contest</a></li>
                    <li><a asp-action="Delete" asp-route-id="@Model.contestId">Delete Contest</a></li>
                  </ul>
                </li>
            </ul>
        </section>
        <section class="table-problem">
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center" width="89px">#</th>
                            <th class="text-center">Origin</th> <!-- if user is owner or contest end -->
                            <th class="text-center">Title</th>
                            <th class="text-center">Statistics</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="unsolved">A</td>
                            <td><a href="">Codeforcess - 123A</a></td>
