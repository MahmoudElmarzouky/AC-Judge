@model IEnumerable<GraduationProject.ViewModels.ViewGroupModel>
@{
    ViewData["Title"] = "Group Page";
}

<section class="group-page">
    <div class="container">
        <ul class="nav nav-tabs text-capitalize">
            @{
                string currentAction = ViewContext.RouteData.Values.ContainsKey("Action") ? ViewContext.RouteData.Values["Action"].ToString() : "NULL";

            }
            @if (currentAction == "Index")
            {
                <li role="presentation" class="active"><a asp-action="Index">All Groups</a></li>
            }
            else
            {
                <li role="presentation"><a asp-action="Index">All Groups</a></li>
            }
            @if (currentAction == "MyGroups")
            {
                <li role="presentation" class="active"><a asp-action="MyGroups">My Groups</a></li>
            }
            else
            {
                <li role="presentation"><a asp-action="MyGroups">My Groups</a></li>
            }
            @if (currentAction == "Invitations")
            {
                <li role="presentation" class="active"><a href="#">Invitations</a></li>
            }
            else
            {
                <li role="presentation"><a href="#">Invitations</a></li>
            }


            <li role="presentation" class="creat-group">
                <a asp-action="Create"><i class="fas fa-plus"></i> Creat Group</a>
            </li>
        </ul>
        <div class="row groups">
            @foreach (var item in Model)
            {
               var classNamebox = "panel panel-";

                classNamebox += (item.GroupStatus == "Public"? "success": "danger");

            
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="@classNamebox">
                    <div class="panel-heading">
                        <h3 class="panel-title"><a asp-action="Details" asp-route-id="@item.GroupId">@item.GroupTitle</a></h3>
                        
                            @{
                                var className = "fas fa-heart";
                                if (item.IsFavourite)
                                    className += " active";
                            }
                            <!-- make this unchangeable just show class active if this group is fav-->
                            <a class="@className" data-favorite="IconFav"></a>
                            <!-- add class active if this faviorte group -->


                    </div>
                    <div class="panel-body">
                        @item.GroupDescription
                    </div>
                    <div class="panel-footer text-center">
                        <div class="col-xs-4 footer-cell">
                            <!-- Number Of User In Group -->
                            <i class="fas fa-users"></i>
                            @item.NumberOfMembers
                        </div>
                        <div class="col-xs-3 text-info footer-cell">
                              @item.UserStatus 
                              <!-- If User Owner This Contest Put word Owner -->
                        </div>
                        <ul class="col-xs-5 breadcrumb footer-cell">
                            <li>@item.NumberOfUpCommingContests</li><!-- scheduled contest -->
                            <li>@item.NumberOfRunningContests</li><!-- Running contest -->
                            <li>@item.NumberOfEndedContests</li><!-- End contest -->
                        </ul>

                    </div>
                </div>
            </div>
            }
        </div>
        <div aria-label="Page navigation" class="text-center">
            <ul class="pagination pagination-lg">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

</section>



