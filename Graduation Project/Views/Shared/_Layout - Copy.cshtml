<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="Content-Language" content="en">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="description" content=" is a programming contest site for anyone from beginners to experts. We hold weekly programming contests online.">
    <meta name="author" content=" Inc.">

    <meta property="og:site_name" content="Judge">

    <meta property="og:title" content="Ranking - " />
    <meta property="og:description" content="is a programming contest site for anyone from beginners to experts. We hold weekly programming contests online." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="#" />
    <meta property="og:image" content="#" />
    <title>@ViewData["Title"]</title>

    <meta property="twitter:title" content="Ranking - " />

    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <link href="//fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" type="text/css">

    <link rel="stylesheet" type="text/css" href="~/css/RankingPage.css">
    <script type="text/javascript" src="~/js/rank.js" async></script>

</head>
<body>

    <header>
        <nav class="navbar nav-upper">
            <div class="container">

                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Welcome</a>
                </div>
                <partial name="_LoginPartial" />

            </div>
        </nav>
        <nav class="navbar navbar-inverse nav-main">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#MainNavColl" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand hvr-wobble-horizontal" href="#">
                        <img alt="Logo" src="~/img/twitter.png" class="img-circle">
                        <span>Judge</span>
                    </a>
                </div>


                <div class="collapse navbar-collapse navbar-right" id="MainNavColl">
                    <ul class="nav navbar-nav">
                        @{
                            string currentController = ViewContext.RouteData.Values.ContainsKey("Controller") ? ViewContext.RouteData.Values["Controller"].ToString() : "NULL";
                            
                            List<string> navElements = new List<string> { "Home", "Blog", "Rank", "Interview", "Problem", "Contest", "Group", "About" };
                            foreach (string navelement in navElements)
                            {
                                if (navelement == currentController)
                                {
                                    <li class="active"> <a href="~/@navelement"> @navelement </a></li>
                                }
                                else
                                {
                                    <li> <a href="~/@navelement"> @navelement </a></li>
                                }
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <partial name="_footer" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
