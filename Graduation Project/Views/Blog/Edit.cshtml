@model GraduationProject.Data.Models.Blog

@{
	ViewData["Title"] = "Create";
}

<section class="create-blog-page">
	<div class="container">
		<h1 class="static-main-title">Edit Blog</h1>

		<form class="form-horizontal" asp-action="Edit">
			<input asp-for="BlogId" type="hidden" />
			<input asp-for="GroupId" type="hidden" />
			<div class="form-group row">
				<label class="control-label col-md-2">Blog Title</label>
				<div class="col-md-9">
					<input asp-for="BlogTitle" class="form-control" placeholder="Blog Title Show Pepole" />
				</div>
			</div>
			<div class="form-group row">
				<label class="control-label col-md-2">Blog Content</label>
				<div class="col-md-9">
					<textarea asp-for="BlogContent" rows="8" class="form-control" placeholder="More Than 100 Characters"></textarea>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-md-offset-2 col-md-9">
					<button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Edit Blog</button>
				</div>
			</div>
		</form>
		<div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
			<span asp-validation-for="BlogTitle"></span>
			<a class="close" data-dismiss="alert" aria-label="close">&times;</a>
		</div>
		<div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
			<span asp-validation-for="BlogContent"></span>
			<a class="close" data-dismiss="alert" aria-label="close">&times;</a>
		</div>
	</div>
</section>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
