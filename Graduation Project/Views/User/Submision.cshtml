
@{
    ViewData["Title"] = "Submision";
}

<section class="main-user-view">
    <div class="container">
	<div class="row">
	    <section class="col-md-3 user-info">
		<div class="thumbnail">
		    @if (Model.PhotoUrl != null){
			<img class="img-responsive img-rounded" src="~/img/Profile/@Model.PhotoUrl" alt="@Model.UserName" />
		    }else {
			<img class="img-responsive img-rounded" src="~/img/Profile/avatar-male.jpg" alt="@Model.UserName" />
		    }
		    <div class="caption text-center">
			<p>
			    <h4 class="user-name">@Model.UserName</h4>
			    <span class="text-muted">@Model.FirstName @Model.LastName</span>, <a href="#" data-toggle="tooltip" data-placement="top" title="Country">@Model.Country</a><!-- Ranking Page Search Country -->
			</p>
			<p>
			    <span class="type">Birth Year:</span> <a href="#">@Model.BirthDate</a> <!-- Ranking Page Search Year -->
			</p>
			<p>
			    <span class="type">Gender:</span> @Model.Gender
			</p>
			<p class="joined">
			    <i class="far fa-clock"></i> <span>Joined @Model.DateOfJoin</span>
			</p>
			
		    </div>
		</div>
	    </section>
	    <section class="col-md-9">
		<nav class="navbar navbar-default">
		    <div class="container-fluid">
			
			<div class="navbar-header">
			  <a class="navbar-brand" href="#">Profile</a>
			</div>
			
			<ul class="nav navbar-nav">
			  <li><a href="#" class="active">Submission</a></li>
			  <li><a href="#">Contest</a></li>
			  <li><a href="#">Blog</a></li>
			  <li><a href="#">Favorite</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
			    <li class="dropdown">
			      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
			      <ul class="dropdown-menu">
				<li><a href="#">General Setting</a></li>
				<li><a href="#">Edit Email</a></li>
				<li><a href="#">Change Password</a></li>
			      </ul>
			    </li>
			</ul>
			
		    </div>
		</nav>
		<section class="my-submision">
		    <div class="table-responsive">
			<table class="table table-bordered text-center">
			    <thead class="thead-light">
				<tr>
				    <th class="text-center">Online Judge</th>
				    <th class="text-center">Problem</th>
				    <th class="text-center">Verdict</th>
				    <th class="text-center">Time</th>
				    <th class="text-center">Memory</th>
				    <th class="text-center">Language</th>
				    <th class="text-center">When</th>
				    <th class="text-center">Share</th>
				</tr>
			    </thead>
			   <tbody>
				@if (Model.Count() == 0)
                                {
                                    <tr>
					<td colspan="8">No Matching Records</td>
				    </tr>
                                }
				 @foreach (var item in Model)
                                {
				    <tr>
					<td>@item.OnlineJudge</td>
					<td><a href="#" data-toggle="tooltip" data-placement="top" title="@item.Title">@item.ProblemSourcesId</a></td>
					<td class="text-@(@item.Verdict=="Accepted"?"success":"danger")" data-open="openMySubmision">@item.Verdict</td>
					<td>@item.TimeConsumed ms</td>
					<td>@item.MemoryConsumed KB</td>
					<td>@item.Language</td>
					<td>
					    <div>@item.SubmitTime.ToShortDateString()</div>
					    <div>@item.SubmitTime.ToShortTimeString()</div>
					</td>
					<td data-link="@Url.Action("GetTextSubmission")" data-id="@item.RunID">
					    @if (item.Visiable == true)
					    {
						<i class="far fa-check-square" data-toogle="far fa-square" data-target="flibShareSubmision"></i>
					    }
					    else
					    {
						<i class="far fa-square" data-toogle="far fa-check-square" data-target="flibShareSubmision"></i>
					    }
					</td>
				    </tr>
				}
				
			    </tbody>
			</table>
		    </div>
		    <div aria-label="Page navigation" class="text-center">
			<ul class="pagination pagination-lg">
			  <li>
			    <a href="#" aria-label="Previous">
			      <span aria-hidden="true">&laquo;</span>
			    </a>
			  </li>
			  <li><a href="#">1</a></li>
			  <li><a href="#">2</a></li>
			  <li><a href="#">3</a></li>
			  <li>
			    <a href="#" aria-label="Next">
			      <span aria-hidden="true">&raquo;</span>
			    </a>
			  </li>
			</ul>
		    </div>
		</section>
	    </section>
	</div>
	
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
