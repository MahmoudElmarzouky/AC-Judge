@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<section class="user-signup">
    <div class="container">
        <h1 class="text-primary text-center">Sign Up</h1>

        <form asp-route-returnUrl="@Model.ReturnUrl" role="form" class="row" method="post">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control input-lg" />
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control input-lg" />
                </div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control input-lg" />
                </div>
                <div class="row form-group">
                    <div class="col-xs-6">
                        <select class="form-control input-lg" name="@Html.NameFor(model=>model.Input.BirthDate)">
                            <option value="0">Birth Date</option>
                            @{
                                int startYear = DateTime.Now.Year;
                                for (int year = startYear - 10; year >= startYear - 100; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-xs-6">
                        <select class="form-control input-lg" name="@Html.NameFor(model=>model.Input.Country)">
                            <option value="">Contry</option>
                            @{
                                foreach (string country in Model.Countries)
                                {
                                    <option value="@country">@country</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
                </div>
            </div>
        </form>

        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.UserName"></span>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.BirthDate"></span>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.Country"></span>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}