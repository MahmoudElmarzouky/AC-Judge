@page
@model LoginModel

@{ Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
	ViewData["Title"] = "Sign In"; }
<section class="user-signin">
    <div class="container">
        <h1 class="text-success text-center">Sign In</h1>

        <form role="form" class="row" action="" method="POST">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control input-lg" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control input-lg" autocomplete="new-password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Sign in</button>
                </div>
                <div class="text-center">
                    <a class="text-success" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                </div>
            </div>
        </form>
	<!--
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.UserName"></span>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span asp-validation-for="Input.Password"></span>
        </div>
	-->
	@foreach (var modeleState in ViewData.ModelState.Values){
	    foreach (var error in modeleState.Errors){
		<div class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
		    <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
		    <span asp-validation-for="Input.UserName">@error.ErrorMessage</span>
		</div>
	    }
	}
    </div>
</section>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
