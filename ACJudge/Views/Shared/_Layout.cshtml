<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta http-equiv="Content-Language" content="en">
    <link rel="icon" href="" />
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!-- Bulid Stylesheet-->
    <link rel="stylesheet" href="~/css/BuildStyleSheet.css" />
    <!-- Hover CSS-->
    <link rel="stylesheet" href="~/css/hover.css" />
    <!-- Google Code Prettify Stylesheet-->
        <link rel="stylesheet" href="~/css/prettify.css" />
    <!-- Main Stylesheet-->
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/script.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <!--[if lt IE 9]>
    <script src="~/js/html5shiv.min.js"></script>
    <script src="~/js/respond.min.js"></script>
    <![endif]-->
    

</head>
<body>

    <header>
        <nav class="navbar nav-upper">
            <div class="container">

                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Welcome</a>
                </div>
                <partial name="_LoginPartial" />

            </div>
        </nav>
        <nav class="navbar navbar-inverse nav-main">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#MainNavColl" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand hvr-wobble-horizontal" href="#">
                        <img alt="Logo" src="~/img/twitter.png" class="img-circle">
                        <span>Judge</span>
                    </a>
                </div>


                <div class="collapse navbar-collapse navbar-right" id="MainNavColl">
                    <ul class="nav navbar-nav">
                        @{
                            string currentController = ViewContext.RouteData.Values.ContainsKey("Controller") ? ViewContext.RouteData.Values["Controller"].ToString() : "NULL";
                            
                            List<string> navElements = new List<string> { "Home", "Blog", "Rank", "Interview", "Problem", "Contest", "Group", "About" };
                            foreach (string navelement in navElements)
                            {
                                if (navelement == currentController)
                                {
                                    <li class="active"> <a href="~/@navelement"> @navelement </a></li>
                                }
                                else
                                {
                                    <li> <a href="~/@navelement"> @navelement </a></li>
                                }
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <partial name="_footer" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
