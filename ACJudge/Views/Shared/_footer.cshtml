@{
    bool displayFooter = true;
    string[] notAllowedArray = { "/Account/Login", "/Account/Register" };

    if (ViewContext.RouteData.Values.ContainsKey("page") && notAllowedArray.Contains(ViewContext.RouteData.Values["page"].ToString()))
    {
        displayFooter = false;
    }
    if (displayFooter)
    {
        <footer class="border-top">
            <div class="copyright text-center">
                copyright &copy; 2021 | <span>AC</span> <span>Judge</span>
            </div>
        </footer>
    }
}