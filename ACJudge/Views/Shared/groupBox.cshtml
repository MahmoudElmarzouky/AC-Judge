@model ACJudge.ViewModels.ViewGroupModel 
@{ 
    var classNamebox = "panel panel-";

    classNamebox += (Model.GroupStatus == "Public" ? "success" : "danger");
}

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="@classNamebox">
        <div class="panel-heading">
            <h3 class="panel-title"><a asp-controller="Group" asp-action="Details" asp-route-id="@Model.GroupId">@Model.GroupTitle</a></h3>

            @{
                var className = "fas fa-heart";
                if (Model.IsFavourite)
                    className += " active";
            }
            <!-- make this unchangeable just show class active if this group is fav-->
            <a class="@className" data-favorite="IconFav"></a>
            <!-- add class active if this faviorte group -->


        </div>
        <div class="panel-body">
            @Model.GroupDescription
        </div>
        <div class="panel-footer text-center">
            <div class="col-xs-4 footer-cell">
                <!-- Number Of User In Group -->
                <i class="fas fa-users"></i>
                @Model.NumberOfMembers
            </div>
            <div class="col-xs-3 text-info footer-cell">
                @Model.UserStatus
                <!-- If User Owner This Contest Put word Owner -->
            </div>
            <ul class="col-xs-5 breadcrumb footer-cell">
                <li>@Model.NumberOfUpCommingContests</li><!-- scheduled contest -->
                <li>@Model.NumberOfRunningContests</li><!-- Running contest -->
                <li>@Model.NumberOfEndedContests</li><!-- End contest -->
            </ul>

        </div>
    </div>
</div>