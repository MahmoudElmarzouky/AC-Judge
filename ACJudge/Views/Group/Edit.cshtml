@model ACJudge.ViewModels.GroupViewsModel.EditGroupModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="edit-group-page">
    <div class="container">
        <h1 class="static-main-title">Edit Group</h1>

        <form class="form-horizontal" asp-action="Edit" method="POST">
            <input type="hidden" asp-for="@Model.groupId" />
            <div class="form-group row">
                <label class="control-label col-md-2">Group Title</label>
                <div class="col-md-9">
                    <input type="text" asp-for="@Model.groupTitle" value="@Model.groupTitle" class="form-control" placeholder="Group Title Show Pepole" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-2">Old Password</label>
                <div class="col-md-9">
                    <input asp-for="@Model.oldPassword"  type="password" class="form-control" placeholder="Old Password To Member Join" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-2">New Password</label>
                <div class="col-md-9">
                    <input asp-for="@Model.newPassword" type="password" class="form-control" placeholder="New Password To Member Join" />
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-2">Description</label>
                <div class="col-md-9">
                    <textarea asp-for="@Model.groupDescription" value="@Model.groupDescription" rows="5" class="form-control" placeholder="Less Than 100 Characters" ></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-2">Visibility</label>
                <div class="radio-btn-change col-md-9">
                    <div class="btn-group">
                    @{ 
                        var radioClass1 = "btn btn-default";
                        var radioClass2 = "btn btn-default";
                        if (Model.Visable) 
                            radioClass1 += " active";
                        else
                            radioClass2 += " active";
                    }
                    <label class="@radioClass1">
                        <input type="radio" asp-for="@Model.visable" value="1"/>
                        Public
                    </label>
                    <label class="@radioClass2">
                        <input type="radio" asp-for="@Model.visable" value="0" />
                        Private
                    </label>
                        
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-9">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Save</button>
                </div>
            </div>
        </form>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <span asp-validation-for="@Model.groupTitle"></span>
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <span asp-validation-for="@Model.newPassword"></span>
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
        <div id="user-error-msg" class="col-sm-4 col-md-offset-8 alert alert-danger fade in">
            <span asp-validation-for="@Model.groupDescription"></span>
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
